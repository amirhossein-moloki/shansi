<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dark_gradient">

    <!-- نوار بالا -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@android:color/transparent"
        android:title="@string/title"
        android:titleTextColor="@color/text_primary"
        app:titleCentered="true"
        app:layout_scrollFlags="scroll|enterAlways" />

    <!-- بدنه -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="20dp"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- کارت وضعیت -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/card_dark"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvStage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stage_fmt"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/range_fmt"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="6dp" />

                    <TextView
                        android:id="@+id/tvChances"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chances_fmt"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ورودی عدد -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilGuess"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_input"
                app:boxStrokeColor="@color/brand_primary"
                app:boxBackgroundColor="@color/card_dark">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etGuess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- دکمه‌ها -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuess"
                    style="@style/Widget.Material3.Button.Tonal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_guess"
                    app:cornerRadius="16dp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnHint"
                    style="@style/Widget.Material3.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/btn_hint"
                    app:cornerRadius="16dp" />
            </LinearLayout>

            <!-- پیام -->
            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/msg_start"
                android:textColor="@color/text_primary"
                android:textSize="15sp"
                android:layout_marginTop="14dp" />

            <!-- کنترل‌ها -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                style="@style/Widget.Material3.Button.Filled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_next"
                android:visibility="gone"
                app:cornerRadius="16dp"
                android:layout_marginTop="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestart"
                style="@style/Widget.Material3.Button.Tonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_restart"
                android:visibility="gone"
                app:cornerRadius="16dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
